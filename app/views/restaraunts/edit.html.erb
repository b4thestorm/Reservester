
<%=render 'header', title: "Edit Restaraunt"%>
</br></br>

<div class= "container">
<%=form_for @restaraunt do |f|%>
<div class="form-group">
<%=f.label :name %>
<%=f.text_field :name %>
</div>
<div class="form-group">
<%=f.label :description %>
<%=f.text_area :description %>
</div>
<div class="form-group">
<%=f.label :address %>
<%=f.text_field :address %>
</div>
<div class="form-group">
<%=f.label :number %>
<%=f.text_field :number %>
</div>
<div class="form-group">
<%=f.file_field :avatar%>
</div>
<div class="form-group">
<%= f.submit %>
</div>
<%end%>
</div>