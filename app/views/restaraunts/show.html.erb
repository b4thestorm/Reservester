<%if logged_in? %>
<div class="pull-right"><%= link_to 'Edit', edit_restaraunt_path%></div>
<%end%>
<div class="pull-right">
	<h3>Location Info : <h3>
<img class="rounded" src="https://maps.googleapis.com/maps/api/staticmap?markers=size:mid|<%=CGI.escape @restaraunt.address%>&zoom=13&size=600x300", class="pull-right">
</div></br></br>
<div class="control-group">
<%=render 'cat_badge', badge: @restaraunt%>
<h1><%=@restaraunt.name%></h1>
<h4>Owner Name: <%=@restaraunt.user.username%></h4>
<p><%=@restaraunt.address%></p>
<p><%=@restaraunt.number%></p>
<p><%=@restaraunt.description%></p>

</div>

<div class="pull-left"><%=image_tag @restaraunt.avatar_url(:mast).to_s%></div>

</br></br>





<div class="container">
<%=form_for [@restaraunt, @reservation] do |f|%>
<div class="form-group">
<%=f.label :email%>
<%=f.text_field :email%>
</div>
<div class="form-group">
<%=f.label :text%>
<%=f.text_field :text%>
</div>
<div class="form-group">
<%=f.label :date%>
<%=f.date_select :datetime%>
</div>
<div>
<%=f.label :time%>
<%=f.time_select :datetime%>
</div>
<%=f.submit 'Set Reservation'%>
<%end%>
</div>


<%@restaraunt.reservations.each do |reserve|%>
	<div class="well">
	<%reserve.email%>
	<%reserve.text%>
	</div>
<%end%>


 





